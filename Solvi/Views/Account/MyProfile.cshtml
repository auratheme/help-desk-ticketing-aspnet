@model Solvi.Models.UserProfileViewModel

@{
    bool adminEditDetail = User.IsInRole("Admin") && ViewContext.RouteData.Values["id"] != null && ViewContext.RouteData.Values["id"]?.ToString() != "";
    ViewBag.Title = adminEditDetail ? Resource.UserProfile : Resource.MyProfile;
}

<h4 class="fs-25 text-capitalize mb-sm-0 fw600">@ViewBag.Title</h4>
@if (adminEditDetail)
{
    <div class="mb-2">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item fs-14 text-capitalize"><a class="color-primarycolor hover-color-primarycolor hover-textdeco-underline fw500" asp-controller="user" asp-action="index">@Resource.UserManagement</a></li>
                <li class="breadcrumb-item fs-14 text-muted text-capitalize" aria-current="page">@ViewBag.Title</li>
            </ol>
        </nav>
    </div>
}
<div class="mt-2">
    <form asp-controller="account" asp-action="myprofile" enctype="multipart/form-data">
        <div class="bg-white p-5 shadow">
            <input asp-for="Id" hidden />
            <input asp-for="AspNetUserId" hidden />
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Username" class="form-label required fw600"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="invalid-message d-block"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="EmailAddress" class="form-label required fw600"></label>
                    <input asp-for="EmailAddress" class="form-control" />
                    <span asp-validation-for="EmailAddress" class="invalid-message d-block"></span>
                </div>
            </div>
            <div class="row pt-3">
                <div class="col-md-6">
                    <label asp-for="FullName" class="form-label required fw600"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="invalid-message d-block"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="PhoneNumber" class="form-label fw600"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="invalid-message d-block"></span>
                </div>
            </div>
            <div class="row pt-3">
                <div class="col-md-6">
                    <label asp-for="FirstName" class="form-label fw600"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="invalid-message d-block"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="LastName" class="form-label fw600"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="invalid-message d-block"></span>
                </div>
            </div>
            <div class="row pt-3">
                <div class="col-md-6">
                    <label asp-for="Address" class="form-label fw600"></label>
                    <textarea asp-for="Address" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Address" class="invalid-message d-block"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="PostalCode" class="form-label fw600"></label>
                    <input asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode" class="invalid-message d-block"></span>
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-12">
                <button class="btn form-btn btn-primary me-1" type="submit">@Resource.Save</button>
                @if (adminEditDetail)
                {
                    <a class="btn form-btn btn-secondary" asp-controller="user" asp-action="index">@Resource.Back</a>
                }
            </div>
        </div>
    </form>
</div>
