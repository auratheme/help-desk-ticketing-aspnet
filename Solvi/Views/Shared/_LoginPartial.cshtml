@using Microsoft.AspNetCore.Identity
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    <ul class="navbar-nav align-items-center justify-content-lg-end flex-row">
        <li class="nav-item pe-3">
            <partial name="_Languages" />
        </li>
        <li class="nav-item">
            <div class="btn-group">
                <button type="button" class="bg-transparent border-0 dropdown-toggle p-0" data-bs-toggle="dropdown" aria-expanded="false">
                    @User.Identity.Name
                </button>
                <ul class="dropdown-menu bg-white dropdown-menu-end py-4 rounded-lg position-absolute">
                    <li class="fs-16 px-4 text-muted pb-2 fw500">Hi @User.Identity.Name</li>
                    <li><a class="dropdown-item bg-white color-body fs-16 px-4" asp-controller="account" asp-action="myprofile" asp-route-id="">My Profile</a></li>
                    <li><a class="dropdown-item bg-white color-body fs-16 px-4" asp-controller="account" asp-action="changepassword">Change Password</a></li>
                    <li>
                        <form class="form-inline mb-0 bg-white" asp-controller="account" asp-action="logoff">
                            <button type="submit" class="dropdown-item bg-white color-body fs-16 px-4">Logout</button>
                        </form>
                    </li>
                </ul>
            </div>
        </li>
    </ul>
}
else
{
    <partial name="_Languages" />
    <a class="ms-3 color-body hover-color-primarycolor fw500" asp-controller="account" asp-action="login">@Resource.Login</a>
    <a class="ms-3 color-body hover-color-primarycolor fw500" asp-controller="account" asp-action="register">@Resource.SignUp</a>
}
